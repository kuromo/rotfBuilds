							span.statValue 0
						#dexStat
							span.statLabel Dex : 
							span.statValue 0
						#vitStat
							span.statLabel Vit : 
							span.statValue 0
						#wisStat
							span.statLabel Wis : 
							span.statValue 0

				h3 advanced stats	
				#advancedStats
				#hppsStat
					span.statLabel hpps : 
					span.statValue 0
				#mppsStat
					span.statLabel mpps : 
					span.statValue 0
				#defCapStat
					span.statLabel defCap : 
